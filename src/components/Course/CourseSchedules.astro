---
import MainTitleHeader from "../TitleHeaders/MainTitleHeader.astro";

export interface CourseSchedulesProps {
    daytimeSchedule?: string;
    afternoonSchedule?: string;
    nightSchedule?: string;
}
interface Props {
    props: CourseSchedulesProps;
}
const { props } = Astro.props as Props;
const { daytimeSchedule, afternoonSchedule, nightSchedule } = props;
---

<section id="container">
    <article class="title-wrapper">
        <MainTitleHeader boldTitle="HORARIOS" />
    </article>
    <article class="content">
        {
            daytimeSchedule && (
                <div class="time">
                    <img
                        src="/images/cursos/ICON_MORNING.svg"
                        alt="Horario Diurno"
                    />
                    <h4>Diurno</h4>
                    <p>{daytimeSchedule}</p>
                </div>
            )
        }
        {
            afternoonSchedule && (
                <div class="time">
                    <img
                        src="/images/cursos/ICON_AFTERNOON.svg"
                        alt="Horario Tarde"
                    />
                    <h4>Tarde</h4>
                    <p>{afternoonSchedule}</p>
                </div>
            )
        }
        {
            nightSchedule && (
                <div class="time">
                    <img
                        src="/images/cursos/ICON_NIGHT.svg"
                        alt="Horario Noche"
                    />
                    <h4>Noche</h4>
                    <p>{nightSchedule}</p>
                </div>
            )
        }
    </article>
</section>

<style lang="scss">
    #container {
        display: flex;
        flex-direction: column;
        gap: 70px;
        align-items: center;
        width: 100%;
        max-width: 1920px;
        background-color: #f4f4f3;
        padding: 50px 0;
        & .title-wrapper {
            width: 65%;
            @media (max-width: 600px) {
                width: 92%;
            }
        }
        & .content {
            display: flex;
            justify-content: center;
            gap: 35px;
            width: 100%;
            @media (max-width: 900px) {
                flex-direction: column;
                align-items: center;
                gap: 50px;
            }
            & .time {
                position: relative;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                padding: 40px 10px 0 10px;
                width: 25%;
                gap: 20px;
                &::before {
                    content: "";
                    display: block;
                    position: absolute;
                    height: 125px;
                    width: 50%;
                    top: 0;
                    left: 0;
                    border-left: 3px dashed var(--fifth-color);
                    border-top: 3px dashed var(--fifth-color);
                    background: transparent;
                }
                @media (max-width: 1280px) {
                    width: 30%;
                }
                @media (max-width: 900px) {
                    width: 60%;
                }
                @media (max-width: 650px) {
                    width: 80%;
                }
                @media (max-width: 500px) {
                    width: 90%;
                }
                h4 {
                    color: var(--tertiary);
                    font-size: 30px;
                    font-weight: 600;
                    text-align: center;
                }
                p {
                    text-align: center;
                    font-size: 20px;
                }
            }
        }
    }
</style>
