---
import LogoSection from './components/LogoSection.astro'
import MediaSection from './components/MediaSection.astro'
import InfoSection from './components/InfoSection.astro'
---


<footer id="main-footer">
    <section class="wrapper">
        <LogoSection />
        <MediaSection />
        <InfoSection />
    </section>
    <footer id="sub-footer">Todos los derechos reservados â’¸ 2023 - EPTEN S.A.C.</footer>
</footer>

<style lang="scss">
    #main-footer {
        display: flex;
        flex-direction: column;
        background-color: var(--primary);
    }
    #main-footer :global(a) {
        text-decoration: none;
    }
    .wrapper {
        display: flex;
        justify-content: center;
        padding: 50px 0;
        gap: 200px;
        @media (max-width: 1170px) {
            gap: 100px;
        }
        @media (max-width: 900px) {
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 50px;
        }
        > :global(article) {
            width: 20%;
            @media (max-width: 900px) {
                width: 100%;
            }
        }
    }
    #sub-footer {
        background-color: #000000;
        color: var(--white);
        padding: 12px 30px;
        font-size: 16px;
    }
</style>
    