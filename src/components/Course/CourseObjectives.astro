---
export type CourseObjectivesContentType = string;
interface Props {
    content: CourseObjectivesContentType;
}
const { content } = Astro.props as Props;
---

<section id="container">
    <h2>¿Qué lograrás cuando acabes el curso?</h2>
    <article class="content">
        <p>{content}</p>
    </article>
</section>

<style lang="scss">
    #container {
        display: flex;
        flex-direction: column;
        gap: 25px;
        border-top: 10px solid var(--fourth-color);
        border-bottom: 10px solid var(--fourth-color);
        width: calc(100% - 4rem);
        max-width: 1250px;
        background-color: var(--primary);
        padding: 20px 60px;
        @media (max-width: 650px) {
            padding: 20px 45px;
        }
        @media (max-width: 600px) {
            width: 100%;
        }
        @media (max-width: 500px) {
            text-align: center;
            padding: 20px 25px;
        }
        h2 {
            color: var(--fifth-color);
            font-size: 36px;
            font-weight: 600;
            @media (max-width: 650px) {
                font-size: 28px;
            }
            @media (max-width: 500px) {
                font-size: 22px;
            }
        }
        .content {
            p {
                font-size: 22px;
                color: var(--white);
                line-height: 45px;
                font-weight: 500;
                @media (max-width: 650px) {
                    font-size: 18px;
                }
                @media (max-width: 500px) {
                    line-height: 35px;
                }
            }
        }
    }
</style>
