---
import MiniTitleHeader from "../TitleHeaders/MiniTitleHeader.astro";
import ValueList from "./ValueList/ValueList";
import type { ValuesProps } from "./ValueList/types";
interface Props {
    valueCards: ValuesProps[];
}
const { valueCards } = Astro.props as Props;
---

<section id="values-section">
    <MiniTitleHeader title="Nuestros Valores" />
    <ValueList values={valueCards} client:only />
</section>

<style lang="scss">
    #values-section {
        display: flex;
        flex-direction: column;
        width: calc(100% - 4rem);
        max-width: 1250px;
        gap: 70px;
        margin: 120px 0 100px;
        @media (max-width: 650px) {
            width: calc(100% - 2rem);
            margin: 80px 0;
            gap: 50px;
        }
    }
</style>
