---
import PromoCourseBox, {
    PromoCoursesBoxProps,
} from "../PromoCourseBox/PromoCourseBox.astro";
import MainTitleHeader from "../TitleHeaders/MainTitleHeader.astro";
type Props = {
    promoCourses: Omit<PromoCoursesBoxProps, "idx">[];
};
const { promoCourses } = Astro.props as Props;
---

<section id="promo-section">
    <article class="title-wrapper">
        <MainTitleHeader boldTitle="CURSOS DEL MES" />
    </article>
    <article class="courses-wrapper">
        {
            promoCourses.map((promoCourse, idx) => (
                <PromoCourseBox
                    props={{
                        ...promoCourse,
                        idx,
                    }}
                />
            ))
        }
    </article>
</section>

<style lang="scss">
    #promo-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: calc(100% - 2rem);
        max-width: 1920px;
        margin-top: 100px;
        gap: 50px;
        .title-wrapper {
            display: flex;
            width: 65%;
            max-width: 950px;
            @media (max-width: 600px) {
                width: 92%;
            }
        }
        .courses-wrapper {
            display: flex;
            flex-direction: column;
            gap: 70px;
            @media (max-width: 650px) {
                gap: 40px;
            }
        }
    }
</style>
