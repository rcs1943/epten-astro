---
import MainTitleHeader from "../TitleHeaders/MainTitleHeader.astro";
import BenefitList from "./BenefitList/BenefitList";
import type { Benefit } from "./BenefitList/types";

interface Props {
    benefitCards: Benefit[];
}
const { benefitCards } = Astro.props as Props;
---

<section id="benefits-section">
    <article class="title-wrapper">
        <MainTitleHeader preTitle="NUESTROS" boldTitle="BENEFICIOS" />
    </article>
    <article class="cards-wrapper">
        <BenefitList benefits={benefitCards} client:only />
    </article>
</section>

<style lang="scss">
    #benefits-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 40px;
        max-width: 1280px;
        width: calc(100% - 2rem);
        .title-wrapper {
            display: flex;
            width: 65%;
            max-width: 950px;
            @media (max-width: 650px) {
                width: 99%;
            }
        }
        .cards-wrapper {
            @media (max-width: 650px) {
                width: calc(100vw - 8rem);
            }
            @media (max-width: 450px) {
                width: calc(100vw - 2rem);
            }
        }
    }
</style>
