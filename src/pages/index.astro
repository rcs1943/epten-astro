---
import Layout from '../layouts/Layout.astro';
import MainTitleHeader from '../components/TitleHeaders/MainTitleHeader.astro';
import PromoCourseBox from '../components/PromoCourseBox/PromoCourseBox.astro'
import { PROMO_COURSES } from '../utils/constants';
---

<Layout>
    <section id="promo-section">
        <article class="title-wrapper">
            <MainTitleHeader boldTitle="CURSOS DEL MES" />
        </article>
        <article class="courses-wrapper">
            {PROMO_COURSES.map(({courseName, schedule, startDate, imagePath}, idx) => 
                <PromoCourseBox 
                    key={idx}
                    courseName={courseName} 
                    schedule={schedule}
                    startDate={startDate}
                    imagePath={imagePath} />)}
        </article>
    </section>
    <section id="courses-section">
        <MainTitleHeader preTitle="DESCUBRE" boldTitle="NUESTROS CURSOS" postTitle="EN" />
    </section>
</Layout>

<style lang="scss">
	#promo-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: calc(100% - 2rem);
        max-width: 1920px;
        margin: 100px 0;
        gap: 50px;
        .title-wrapper {
            width: 65%;
            max-width: 950px;
        }
        .courses-wrapper {
            display: flex;
            flex-direction: column;
            gap: 70px;
        }
    }
    #courses-section {
        width: 100%;
    }
</style>
