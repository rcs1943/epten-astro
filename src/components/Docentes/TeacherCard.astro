---
export interface TeacherCardProps {
    name: string;
    academics: string;
    about: string;
    photoPath: string;
}
interface Props {
    teacherCard: TeacherCardProps;
}
const { teacherCard } = Astro.props as Props;
const { name, academics, about, photoPath } = teacherCard;
---

<div class="container">
    <img src={photoPath} alt=`Foto del docente ${name}` />
    <div class="teacher-info">
        <h2>{name}</h2>
        <h3>{academics}</h3>
        <p>{about}</p>
    </div>
</div>

<style lang="scss">
    .container {
        display: flex;
        gap: 30px;
        border: 1px solid var(--primary);
        padding: 30px;
        padding-bottom: 60px;
        position: relative;
        @media (max-width: 1000px) {
            flex-direction: column;
            align-items: center;
        }
        @media (max-width: 500px) {
            padding-left: 15px;
            padding-right: 15px;
        }
        &::before {
            position: absolute;
            left: 0px;
            right: 0px;
            bottom: 0px;
            content: "";
            height: 25px;
            border-top: 3px dashed var(--fifth-color);
        }
        &::after {
            position: absolute;
            left: -1px;
            right: -1px;
            bottom: -20px;
            content: "";
            height: 30px;
            background-color: var(--fifth-color);
        }
        img {
            max-width: 280px;
            border: 2px solid var(--primary);
        }
        .teacher-info {
            display: flex;
            flex-direction: column;
            @media (max-width: 500px) {
                text-align: center;
            }
            h2 {
                font-size: 36px;
                color: var(--primary);
                @media (max-width: 650px) {
                    font-size: 32px;
                }
            }
            h3 {
                font-size: 16px;
                margin-top: 10px;
                color: var(--gray-1);
                font-weight: 600;
                @media (max-width: 650px) {
                    font-size: 14px;
                }
                @media (max-width: 500px) {
                    font-size: 12px;
                }
            }
            p {
                font-size: 20px;
                margin-top: 30px;
                line-height: 30px;
                @media (max-width: 650px) {
                    font-size: 18px;
                }
            }
        }
    }
</style>
