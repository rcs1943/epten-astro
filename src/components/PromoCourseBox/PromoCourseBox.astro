---
import AnimatedButton from "../CustomButtons/AnimatedButton.astro";
export interface PromoCoursesBoxProps {
    courseName: string;
    schedule: string;
    startDate: string;
    imagePath: string;
    idx: number;
};
interface Props {
    props: PromoCoursesBoxProps;
}
const { props } = Astro.props as Props;
const { courseName, schedule, startDate, imagePath, idx } = props;
---

<div id="container">
    <img
        src={imagePath}
        alt="Imagen Curso Del Mes"
        style={{ order: idx % 2 === 0 ? 0 : 1 }}
    />
    <div class="info">
        <h2>{courseName}</h2>
        <h3>Horario:</h3>
        <p>{schedule}</p>
        <h3>Inicio:</h3>
        <p>{startDate}</p>
        <div class="button-wrapper">
            <AnimatedButton
                content="Más información aquí"
                path="./inscripcion"
            />
        </div>
    </div>
</div>

<style lang="scss">
    #container {
        display: flex;
        background-color: var(--primary);
        width: 100%;
        @media (max-width: 950px) {
            flex-direction: column;
        }
    }
    img {
        display: flex;
        justify-content: flex-end;
        width: 600px;
        min-height: 400px;
        @media (max-width: 650px) {
            min-height: unset;
        }
    }
    .info {
        display: flex;
        flex-direction: column;
        gap: 25px;
        padding: 50px;
        color: var(--white);
        width: 100%;
        @media (max-width: 950px) {
            order: 1;
        }
        @media (max-width: 500px) {
            padding: 40px 25px;
        }
        h2 {
            color: var(--fifth-color);
        }
        h3 {
            // margin-top: 20px;
        }
    }
    .button-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 20px;
        @media (max-width: 500px) {
            margin-top: 0;
        }
    }
</style>
